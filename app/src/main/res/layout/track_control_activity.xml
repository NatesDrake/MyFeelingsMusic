<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/cover_album_current"
        style="@style/CoverAlbumArtPlaying"
        tools:src="@drawable/voicealbum_happy" />

    <TextView
        style="@style/TimingMusic"
        android:background="@color/mainTextColor" />

    <TextView
        android:id="@+id/current_title_music"
        style="@style/MainInfoMusicTextStyle"
        tools:text="You Make My Dreams" />

    <TextView
        android:id="@+id/current_artist_name"
        style="@style/OtherInfoMusicTextStyle"
        tools:text="Hall and Oates" />

    <TextView
        android:id="@+id/current_album_name"
        style="@style/OtherInfoMusicTextStyle"
        tools:text="Voices" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp">

        <ImageView
            android:id="@+id/list_music_items"
            style="@style/SmallButtonsPlayingStyle"
            android:src="@drawable/lines_menu" />

        <ImageView
            style="@style/MediumButtonsPlayingStyle"
            android:src="@drawable/rewind_arrow" />

        <ImageView
            android:id="@+id/play_pause_buttom"
            style="@style/BigButtonsPlayingStyle"
            tools:src="@drawable/music_player_play" />

        <ImageView
            style="@style/MediumButtonsPlayingStyle"
            android:layout_marginEnd="40dp"
            android:src="@drawable/fast_forward_arrow" />

        <ImageView
            style="@style/SmallButtonsPlayingStyle"
            android:layout_marginEnd="0dp"
            android:src="@drawable/clockwise_refresh_arrow" />

    </LinearLayout>

    <Button
        android:id="@+id/playlist_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        tools:text="Playlist"
        android:background="@color/colorPrimaryDark"
        android:textColor="@android:color/white"
        android:layout_gravity="center"/>

</LinearLayout>